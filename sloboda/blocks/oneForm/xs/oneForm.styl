+media-breakpoint-up(xs) {
    .oneForm{
        
        height:500px;
        &__wrap{
            background: url(form-back-catalog-new.jpg) no-repeat 50% 0%;
            background-size:150% 70%;
            height:300px;
            
            padding-top:40px;
            p{
                color:#fff;
                text-align:left;
                font-size:14px;
               
            }
        }
        &__header {
            font-size:20px;
            color:#fff;
            line-height:35px;
            font-weight:900;
            text-align:left;
           

        }
        &__form{
                background: #fff;
               padding:30px 25px  5px 25px ;
               margin-top:40px;
               box-shadow:0 20px 100px 0 rgba(0,0,0,.3);
           input{
                outline:none;
                width:100%;
                height:50px;
                border-radius:5px;
                &:nth-child(1){
                    margin-bottom:10px;
                     border:2px solid #d8d8d8;
                     &[placeholder]{
                         padding-left:20px;
                          font-size:18px;
                     }
                }
                 &:nth-child(2){
                    margin-bottom:20px;
                     border:2px solid #d8d8d8;
                       &[placeholder]{
                         padding-left:20px;
                         font-size:18px;
                     }
                }
                 &:nth-child(3){
                   background: #FF7900;
                   font-size:18px;
                   text-align:center;
                   border:none;
                   margin-bottom:25px;
                
                   color:#fff;
                }

            }
        }
    }

}