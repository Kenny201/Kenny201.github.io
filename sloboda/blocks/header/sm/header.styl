+media-breakpoint-up(sm) {
    .header {    
    
        width:100%;
        position: fixed;
         
        align-items: center;
        background-color:#fff;
        justify-content: space-between;
        .header__mobile-container{
            height:50px;
            width:100%;
            padding-left:15px;
            padding-right:15px;
            display:flex;
            justify-content: space-between;
        }
        .menu__button{
            display:flex;
            justify-content: center;
            flex-wrap: wrap;
            width:21px;
            height:34px;
            padding-top:20px;
           span{ 
                width:100%;
                height:2px;   
                background: #393185;
                position: relative;
                align-self:center;
                }
        }
        .logo{
            align-self: center;
            img{
                width:100px;
            }
        }
        .header__phone{
             align-self: center;
        }
        &__mobile{
            display:none;
           
            height:100%;
            background:#393185;
           
            &>ul{
                margin-top:0px;
            }
            ul li {list-style-type: none;}
            li ul{
                color:#afa9eb;

            }
            ul li.menuparent {
                color:#fff;
                
                &:nth-child(1){
                   
                    padding-top:20px;
                    
                }
                &:nth-child(2){
                      padding-top:20px;
                      padding-bottom:10px;
                
                }
                &:nth-child(3){
                      padding-top:15px;
                
                }
                 &:nth-child(4){
                      padding-top:35px;
                
                }
                 &:nth-child(5){
                      padding-top:35px;
                      padding-bottom:20px;
                
                }
                &>a{
                    font-size:16px;
                    font-weight:bold;
                    text-transform: uppercase;}
            }
            ul li ul{
                position: relative;
                left:-35px;
                line-height: 30px;
                font-size:14px;
                li a{
                    text-transform: uppercase;
                }
            }
        }
        &__menu{
          display:none;
        }
        .references__contact{
            display:none;
        }
         .header-logo{
            display:none;
            
        }
        
      
    }
}
