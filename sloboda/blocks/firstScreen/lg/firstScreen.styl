+media-breakpoint-up(lg) {
    .firstScreen {
         height:600px;
         &__wrap{
            height:600px;    
            background: url('header-form-back.jpg') no-repeat center;}
      
        &__text{
            height:300px;
            margin-top:105px;
            display:flex;
            flex-direction: column;
            justify-content: space-between;

        }
         &__title{
            width:500px;
            margin-bottom:68px;
            h1{color:#fff;
                font-size:30px;
                font-weight:900;
                line-height:1.3;
                
                text-align:left;
                }
        }
        &__icons{
            display:flex;
            margin:0;
            width:520px;
              flex-direction: row;
            justify-content: space-between;
        }
        .icons__group_1{
            display:flex;
            line-height: 1.3;
            flex-direction: column;
            width:180px;
            justify-content: space-around;
            height:180px;
            left:0;
            font-size:14px;
            color:#fff;
            .firstScreen__icon{
                padding-left:50px;
                position: relative;
                &:nth-child(1):before{
                content:'';
                position: absolute;
                width:60px;
                left:-25px;
                top:4px;
                height:55px;
                background: url(form-icon1.png) no-repeat center;
            }
                &:nth-child(2):before{
                    content:'';
                    position: absolute;
                    width:70px;
                    left:-30px;
                    top:-13px;
                    height:65px;
                    background: url(form-icon3.png) no-repeat center;
            }
            
            
            }
        }
         .icons__group_2{
            display:flex;
            width:250px;
              line-height: 1.3;
            flex-direction: column;
            justify-content: space-around;
            height:170px;
            font-size:14px;
            color:#fff;
             .firstScreen__icon{
                padding-left:50px;
                position: relative;
                &:nth-child(1):before{
                content:'';
                position: absolute;
                width:60px;
                left:-30px;
                top:0px;
                height:60px;
                background: url(form-icon2.png) no-repeat center;
            }
                &:nth-child(2):before{
                    content:'';
                    position: absolute;
                    width:60px;
                    left:-30px;
                    top:-7px;
                    height:55px;
                    background: url(form-icon4.png) no-repeat center;
            }
            
            
            }

        }
        &__form{
            background: #fff;
            width:390px;
            top:0;
            float:right;
            height:462px;
            margin-top:80px;
            position: relative;
            left:23px;
            padding:35px 40px  50px 40px ;
             .firstScreen__form_title{
                 text-align:center;
                 font-size:20px;
                 margin-bottom:40px;
             }
            input{
                outline:none;
                width:100%;
                height:60px;
                border-radius:5px;
                &:nth-child(1){
                    margin-bottom:10px;
                     border:2px solid #d8d8d8;
                     &[placeholder]{
                         padding-left:20px;
                          font-size:16px;
                     }
                }
                 &:nth-child(2){
                    margin-bottom:30px;
                     border:2px solid #d8d8d8;
                       &[placeholder]{
                         padding-left:20px;
                         font-size:16px;
                     }
                }
                 &:nth-child(3){
                   background: #FF7900;
                   font-size:18px;
                   text-align:center;
                   border:none;
                   margin-bottom:25px;
                   box-shadow:0 15px 30px rgba(0,0,0,0.2);
                   color:#fff;
                }

            }
             .under-form__text{
                 font-size:12px;
                 text-align:center;
                 color:#bab4ab;
             }
          
        }
    }
}