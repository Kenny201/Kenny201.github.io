+media-breakpoint-up(xs) {
    .firstScreen  {
        height:1050px;
        &__wrap{
            height:600px;    
            background: url('header-form-back.jpg') no-repeat center;}
        &__text{
            height:100%;
            margin-top:45px;
            display:flex;

            flex-direction: column;


        }
       &__title{
        
            width:100%;
            h1{color:#fff;
                font-size:30px;
                font-weight:900;
                line-height:1.3;
            
                text-align:center;
                }
        }
        &__icons{
            display:flex;
            flex-direction: column;
            width:100%;
            height:350px;
            margin-top:0;
           
            margin:0 auto;
            justify-content: space-between;
        }
        .icons__group_1{
            display:flex;
            line-height: 1.3;
            flex-direction: column;
           
            justify-content: space-around;
            height:170px;
            
            margin-left:30px;
            
            font-size:14px;
            color:#fff;
            .firstScreen__icon{
                padding-left:50px;
                position: relative;
                &:nth-child(1):before{
                content:'';
                position: absolute;
                width:60px;
                left:-25px;
                top:4px;
                height:55px;
                background: url(form-icon1.png) no-repeat center;
            }
                &:nth-child(2):before{
                    content:'';
                    position: absolute;
                    width:70px;
                    left:-30px;
                    top:-13px;
                    height:65px;
                    background: url(form-icon3.png) no-repeat center;
            }
            
            
            }
        }
         .icons__group_2{
            display:flex;
             
            margin-left:30px;
            line-height: 1.3;
            flex-direction: column;
            justify-content: space-around;
            height:170px;
            font-size:14px;
            color:#fff;
             .firstScreen__icon{
                padding-left:50px;
                position: relative;
                &:nth-child(1):before{
                content:'';
                position: absolute;
                width:60px;
                left:-25px;
                top:0px;
                height:60px;
                background: url(form-icon2.png) no-repeat center;
            }
                &:nth-child(2):before{
                    content:'';
                    position: absolute;
                    width:60px;
                    left:-25px;
                    top:-7px;
                    height:55px;
                    background: url(form-icon4.png) no-repeat center;
            }
            
            
            }

        }
        &__form{
            background: #fff;
            height:400px;
            margin-top:150px;
            
           
            left:0;
            padding:10px 15px  50px 10px ;
             .firstScreen__form_title{
                 text-align:center;
                 font-size:20px;
                 margin-bottom:40px;
             }
            input{
                outline:none;
                width:100%;
                height:60px;
                border-radius:5px;
                &:nth-child(1){
                    margin-bottom:10px;
                     border:2px solid #d8d8d8;
                     &[placeholder]{
                         padding-left:20px;
                          font-size:16px;
                     }
                }
                 &:nth-child(2){
                    margin-bottom:30px;
                     border:2px solid #d8d8d8;
                       &[placeholder]{
                         padding-left:20px;
                         font-size:16px;
                     }
                }
                 &:nth-child(3){
                   background: #FF7900;
                   font-size:18px;
                   text-align:center;
                   border:none;
                   margin-bottom:25px;
                   box-shadow:0 15px 30px rgba(0,0,0,0.2);
                   color:#fff;
                }

            }
             .under-form__text{
                 font-size:12px;
                 text-align:center;
                 color:#bab4ab;
             }
          
        }
    }
}